{
  "manifest_version": 3,
  "name": "When2Work Dashboard",
  "version": "1.0",
  "description": "Clean, modern dashboard overlay for When2Work with quick actions",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.when2work.com/*"],
      "js": ["dashboard.js"],
      "css": ["dashboard.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dashboard.css"],
      "matches": ["*://*.when2work.com/*"]
    }
  ]
}
